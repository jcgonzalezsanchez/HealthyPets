@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item container icon">
        <a  type="button" class="nav-link btn btn-outline-success btn-circle text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Admin <i class="fas fa-user-circle"></i> @*@User.Identity.Name!*@</a> 
    </li>
    <li class="nav-item container icon">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button type="submit" class="nav-link btn btn-outline-success text-white padding"> Salir <i class="fas fa-sign-out-alt"></i></button>
        </form>
    </li>
}
else
{
    <li class="nav-item container">
        <a class="nav-link btn btn-outline-success text-white" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
    </li>

    <li class="nav-item container">
        <a class="nav-link btn btn-outline-success text-white" asp-area="Identity" asp-page="/Account/Login">Ingresar</a>
    </li>
}
</ul>
