@page
@model ACWebApp.Pages.Propietarios.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h3 class="center-align indigo-text text-darken-2">Editar Propietario</h3>

<br />

<div class="row">
    <form method="post" class="col s12">
        <input hidden asp-for="Propietario.Id" />

        <div>
            <div class="row">
                <div class="input-field col s12 m3 l3">
                    <input id="primer_nombre" type="text" class="validate blue-text text-darken-4" asp-for="Propietario.PrimerNombre">
                    <label for="primer_nombre">Primer Nombre</label>
                </div>
                <div class="input-field col s12 m3 l3">
                    <input id="segundo_nombre" type="text" class="validate blue-text text-darken-4" asp-for="Propietario.SegundoNombre">
                    <label for="segundo_nombre">Segundo Nombre</label>
                </div>
                <div class="input-field col s12 m3 l3">
                    <input id="primer_apellido" type="text" class="validate blue-text text-darken-4" asp-for="Propietario.PrimerApellido">
                    <label for="primer_apellido">Primer Apellido</label>
                </div>
                <div class="input-field col s12 m3 l3">
                    <input id="segundo_apellido" type="text" class="validate blue-text text-darken-4" asp-for="Propietario.SegundoApellido">
                    <label for="segundo_apellido">Segundo Apellido</label>
                </div>
            </div>
        </div>

        <div>
            <div class="row">
                <div class="input-field col s12 m6 l6">
                    <select asp-for="Propietario.TipoIdentificacion">
                        <option value="" disabled selected>Select document</option>
                        <option value="Cédula">Cédula de ciudadanía</option>
                        <option value="Cédula de extranjería">Cédula de extranjería</option>
                        <option value="Tarjeta de identidad">Tarjeta de identidad</option>
                    </select>
                </div>
                <div class="input-field col s12 m6 l6">
                    <input id="nit" type="number" class="validate blue-text text-darken-4" asp-for="Propietario.Identificacion">
                    <label for="nit">Número</label>
                </div>
            </div>
        </div>

        <div>
            <div class="row">

                <div class="input-field col s12 m4 l4">
                    <select asp-for="Propietario.Ciudad">
                        <option value="" disabled selected>Seleccione la ciudad</option>
                        <option value="Bogota">Bogotá</option>
                        <option value="Barranquilla">Barranquilla</option>
                        <option value="Cali">Cali</option>
                        <option value="Cartagena">Cartagena</option>
                        <option value="Medellin">Medellín</option>
                        <option value="SantaMarta">Santa Marta</option>
                        <option value="OtraCiudad">Otra ciudad</option>
                    </select>
                </div>
                <div class="input-field col s12 m4 l4">
                    <input id="direccion" type="text" class="validate blue-text text-darken-4" asp-for="Propietario.Direccion">
                    <label for="direccion">Dirección</label>
                </div>
                <div class="input-field col s12 m4 l4">
                    <input id="ocupacion" type="text" class="validate blue-text text-darken-4" asp-for="Propietario.Ocupacion">
                    <label for="ocupacion">Ocupación</label>
                </div>
            </div>
        </div>

        <div>
            <div class="row">

                <div class="input-field col s12 m3 l3">
                    <input id="telefono1" type="number" class="validate blue-text text-darken-4" asp-for="Propietario.Telefono1">
                    <label for="telefono1">Teléfono 1</label>
                </div>
                <div class="input-field col s12 m3 l3">
                    <input id="telefono2" type="number" class="validate blue-text text-darken-4" asp-for="Propietario.Telefono2">
                    <label for="telefono2">Teléfono 2</label>
                </div>
                <div class="input-field col s12 m3 l3">
                    <input id="celular1" type="number" class="validate blue-text text-darken-4" asp-for="Propietario.Celular1">
                    <label for="celular1">Celular 1</label>
                </div>
                <div class="input-field col s12 m3 l3">
                    <input id="celular2" type="number" class="validate blue-text text-darken-4" asp-for="Propietario.Celular2">
                    <label for="celular2">Celular 2</label>
                </div>
            </div>
        </div>

        <div>
            <div class="row">

                <div class="input-field col s12 m12 l12">
                    <input id="observacion" type="text" class="validate blue-text text-darken-4" asp-for="Propietario.Observacion">
                    <label for="observacion">Observación</label>
                </div>
            </div>
        </div>

        <div class="center-align">
            <button type="submit"
                    class="btn-floating btn waves-effect waves-light white-text blue darken-2 ">
                <i class="material-icons">save</i>
            </button>
            <a asp-page="./Index"
               class="btn-floating btn waves-effect waves-light white-text blue darken-2">
                <i class="material-icons">cancel</i>
            </a>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
