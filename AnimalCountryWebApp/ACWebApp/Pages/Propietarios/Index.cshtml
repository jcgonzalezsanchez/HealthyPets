@page
@model ACWebApp.Pages.Propietarios.IndexModel
@addTagHelper`*, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<h3 class="justify-content-center">Pripietaios</h3>

<br />

<div>
    <a asp-page="../Index"
       class="btn btn-primary">
        Regresar
    </a>

    <a asp-page="Create"
       class="btn btn-primary">
        Crear
    </a>
</div>

<br />

<form method="post">
    <table class="table-responsive">
        <thead>
            <tr class="justify-content-xl-center">
                <th class="center">Nombre</th>
                <th class="center">TipoDocumento</th>
                <th class="center">Identificacion</th>
                <th class="center">Ciudad</th>
                <th class="center">Celular</th>
                <th class="center">Nombre Paciente</th>
                <th class="center">Editar</th>
                <th class="center">Eliminar</th>
                <th class="center">Crear Paciente</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Propietarios)
            {
            <tr>
                <td class="center">@item.PrimerNombre @item.PrimerApellido</td>
                <td class="center">@item.TipoIdentificacion</td>
                <td class="center">@item.Identificacion</td>
                <td class="center">@item.Ciudad</td>
                <td class="center">@item.Celular1</td>
                <td class="center">
                    @foreach (var p in @item.PropietarioPacientes)
                    {
                        <span>@p.Paciente.Nombre</span>
                    }
                </td>

                <td class="center">
                    <a asp-route-id="@item.Id"
                       asp-page="Edit"
                       class="btn btn-primary">
                        Editar
                    </a>
                </td>


                <td class="center">
                    <button type="submit"
                            asp-page-handler="delete"
                            asp-route-id="@item.Id"
                            class="btn btn-primary">
                        Eliminar
                    </button>
                </td>

                <td class="center">
                    <a asp-route-propietarioid="@item.Id"
                       asp-page="../Pacientes/Create"
                       class="btn btn-primary">
                        Crear paciente
                    </a>
                </td>

                <td class="center">
                    <a asp-route-id="@item.Id"
                       asp-page="Details"
                       class="btn btn-primary">
                        Detalles
                    </a>
                </td>

            </tr>
            }
        </tbody>
    </table>
</form>
