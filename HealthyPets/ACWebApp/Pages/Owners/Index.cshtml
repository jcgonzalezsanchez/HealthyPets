@page
@model ACWebApp.Pages.Owners.IndexModel
@addTagHelper`*, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="text-center text-success">
    <h2><i class="fas fa-user"></i> Propietarios</h2>
</div>

<hr />


<div class="">
    <nav class="navbar navbar-light bg-light">

        <div>
            <a asp-page="/Dashboard/Index"
               class="btn btn-success">
                <i class="fas fa-undo-alt"></i>
                Regresar
            </a>

            <a asp-page="Create"
               class="btn btn-success">
                <i class="fas fa-plus-circle"></i>
                Propietario
            </a>
        </div>

        <div>
            <form class="form-inline">
                <input class="form-control mr-sm-2 buscar-j" id="txtsearch" placeholder="Buscar un propietario..." aria-label="Search">
                <button class="btn btn-success my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
            </form>
        </div>

    </nav>
</div>

<hr />

<div class="container text-center">
    <form method="post">
        <table id="ownersTable" class="table table-responsive table-stripped table-hover col-12">
            <thead class="table-dark table-sm col-12">
                <tr class="table-black">
                    <th>Nombre</th>
                    <th>Dumento</th>
                    <th>Número</th>
                    @*<th>Ciudad</th>*@
                    <th>Celular</th>
                    <th>Paciente</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.Owners)
                {
                    <tr>
                        <td>@item.Name @item.LastName</td>
                        <td>@item.IdentificationType</td>
                        <td>@item.Identification</td>
                        @*<td>@item.City</td>*@
                        <td>@item.MovilPhone</td>
                        <td>
                            @foreach (var p in @item.PropietarioPacientes)
                            {
                                <a class="btn btn-outline-success" asp-route-id="@p.Paciente.Id" asp-page="../Pacientes/Details">@p.Paciente.Nombre</a>
                            }
                        </td>

                        <td>
                            <a asp-route-id="@item.Id"
                               asp-page="Edit"
                               class="btn btn-outline-success">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>

                        <td>
                            <a asp-route-id="@item.Id"
                               asp-page="Delete"
                               class="btn btn-outline-success btn-circle">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>

                        <td>
                            <a asp-route-id="@item.Id"
                               asp-page="Details"
                               class="btn btn-outline-success">
                                <i class="fas fa-info-circle"></i>
                            </a>
                        </td>

                        <td>
                            <a asp-route-ownerid="@item.Id"
                               asp-page="../Pacientes/Create"
                               class="btn btn-success">
                                <i class="fas fa-plus-circle"></i>
                                <span>Paciente</span>
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
