@page
@model ACWebApp.Pages.Owners.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="text-center text-success">
    <h2>Editar Propietario</h2>
</div>

<hr />

<h4 class="text-success">@Html.DisplayFor(model => model.Owner.Name) @Html.DisplayFor(model => model.Owner.LastName)</h4>

<div class="row">
    <form method="post" class="col s12">
        <input hidden asp-for="Owner.Id" />

        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6">
                <label for="nombre">Nombre</label>
                <input asp-for="Owner.Name" type="text" class="form-control" id="nombre" placeholder="Ingrese su nombre...">
            </div>

            <div class="col-xs-12 col-sm-6 col-md-6">
                <label for="Apellido">Apellido</label>
                <input asp-for="Owner.LastName" type="text" class="form-control" id="apellido" placeholder="Ingrese su apellido...">
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6">
                <label class="mr-sm-2" for="inlineFormCustomSelect">Tipo de documento</label>
                <select asp-for="Owner.IdentificationType" class="custom-select form-control" id="inlineFormCustomSelect">
                    <option value="" selected>Seleccione documento...</option>
                    <option value="Cédula">Cédula de ciudadanía</option>
                    <option value="Cédula de extranjería">Cédula de extranjería</option>
                    <option value="Tarjeta de identidad">Tarjeta de identidad</option>
                </select>
            </div>

            <div class="col-xs-12 col-sm-6 col-md-6">
                <label for="nit">Número documento</label>
                <input asp-for="Owner.Identification" type="number" class="form-control" id="nit" placeholder="Ingrese el número...">
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6">
                <label class="mr-sm-2" for="inlineFormCustomSelect">Ciudad</label>
                <select asp-for="Owner.City" class="custom-select form-control" id="inlineFormCustomSelect">
                    <option value="" selected>Seleccione la ciudad...</option>
                    <option value="Bogota">Bogotá</option>
                    <option value="Barranquilla">Barranquilla</option>
                    <option value="Cali">Cali</option>
                    <option value="Cartagena">Cartagena</option>
                    <option value="Medellin">Medellín</option>
                    <option value="SantaMarta">Santa Marta</option>
                    <option value="OtraCiudad">Otra ciudad</option>
                </select>
            </div>

            <div class="col-xs-12 col-sm-6 col-md-6">
                <label for="direccion">Dirección</label>
                <input asp-for="Owner.Address" type="text" class="form-control" id="direccion" placeholder="Ingrese su dirección...">
            </div>
        </div>

        <hr />


        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6">
                <label for="celular">Celular</label>
                <input asp-for="Owner.Phone" type="number" class="form-control" id="celular" placeholder="Ingrese su celular...">
            </div>

            <div class="col-xs-12 col-sm-6 col-md-6">
                <label for="telefono">Teléfono</label>
                <input asp-for="Owner.MovilPhone" type="number" class="form-control" id="telefono" placeholder="Ingrese su teléfono...">
            </div>
        </div>


        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <label for="observacion">Observación</label>
                <input asp-for="Owner.Obsevation" type="text" class="form-control" id="observacion" placeholder="Ingrese una observación...">
            </div>
        </div>

        <hr />

        <div>
            <button type="submit"
                    class="btn btn-success">
                <i class="fas fa-save"></i>
                Guardar
            </button>



            <a asp-page="./Index"
               class="btn btn-success">
                <i class="fas fa-times-circle"></i>
                Cancelar
            </a>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
